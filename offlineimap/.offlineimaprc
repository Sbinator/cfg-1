[general]
accounts = UMass, UMassCS, Gmail, Fastmail
maxsyncaccounts = 5
pythonfile = ~/offlineimapext.py

[Account Gmail]
localrepository = LocalGmail
remoterepository = RemoteGmail

[Repository LocalGmail]
type = Maildir
localfolders = ~/Maildir/Gmail

[Repository RemoteGmail]
type = Gmail
maxconnections = 2
remoteusereval = get_authinfo_value("imap.gmail.com", "993", "login")
remotepasseval = get_authinfo_value("imap.gmail.com", "993", "password")
folderfilter = lambda foldername: foldername not in ['[Gmail]/All Mail', '[Gmail]/Important']
sslcacertfile = /etc/ssl/certs/ca-certificates.crt

[Account UMass]
localrepository = LocalUMass
remoterepository = RemoteUMass

[Repository LocalUMass]
type = Maildir
localfolders = ~/Maildir/UMass

[Repository RemoteUMass]
type = IMAP
remotehost = mail-a.oit.umass.edu
remoteusereval = get_authinfo_value("mail-a.oit.umass.edu", "993", "login")
remotepasseval = get_authinfo_value("mail-a.oit.umass.edu", "993", "password")
sslcacertfile = /etc/ssl/certs/ca-certificates.crt

[Account UMassCS]
