(defun rofi (mode)
  (run-shell-command (concat "rofi -show " mode " -m " (write-to-string (head-number (current-head))))))

(defcommand rofi-run () () (rofi "run -sidebar-mode"))
(defcommand rofi-window () () (rofi "window"))
